root = true

[*]
charset = UTF-8
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = false
indent_style = space
indent_size = 4
max_line_length = 120
tab_width = 4

[*.{md, txt}]
max_line_length = off
trim_trailing_whitespace = false

[*.{yaml, yml}]
indent_size = 2
tab_width = 2